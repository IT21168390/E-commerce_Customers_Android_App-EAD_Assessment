<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".fragments.ProfileViewFragment"
    >

    <!-- Profile Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <!-- Name -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:textColor="@color/black"/>

        <!-- Username -->
        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/gray_400"
            android:layout_below="@id/tvName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp" />

    </RelativeLayout>

    <!-- Profile Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:showDividers="middle">

        <!-- Gender -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp">
            <ImageView
                android:id="@+id/iconGender"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_gender"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/tvGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="16sp"
                android:layout_toEndOf="@id/iconGender"
                android:layout_marginStart="12dp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tvGenderValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_alignParentEnd="true" />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:layout_toEndOf="@id/tvGenderValue"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp" />
        </RelativeLayout>

        <!-- Birthday -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp">
            <ImageView
                android:id="@+id/iconBirthday"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_date"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/tvBirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birthday"
                android:textSize="16sp"
                android:layout_toEndOf="@id/iconBirthday"
                android:layout_marginStart="12dp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tvBirthdayValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-12-2000"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_alignParentEnd="true" />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:layout_toEndOf="@id/tvBirthdayValue"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp" />
        </RelativeLayout>

        <!-- Email -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp">
            <ImageView
                android:id="@+id/iconEmail"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_message"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="16sp"
                android:layout_toEndOf="@id/iconEmail"
                android:layout_marginStart="12dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvEmailValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:text="abc@gmail.com"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:layout_toEndOf="@id/tvEmailValue"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp" />
        </RelativeLayout>

        <!-- Phone Number -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp">
            <ImageView
                android:id="@+id/iconPhoneNumber"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_phone_icon"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/tvPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textSize="16sp"
                android:layout_toEndOf="@id/iconPhoneNumber"
                android:layout_marginStart="12dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvPhoneNumberValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="(94)77 555-0133"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:layout_toEndOf="@id/tvPhoneNumberValue"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp" />
        </RelativeLayout>

        <!-- Change Password -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp">
            <ImageView
                android:id="@+id/iconChangePassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_password"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/tvChangePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textSize="16sp"
                android:layout_toEndOf="@id/iconChangePassword"
                android:layout_marginStart="12dp"
                android:textColor="@color/black" />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>