<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/topSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write Review"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please write Overall level of satisfaction"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_below="@id/topSection"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:lineSpacingExtra="4dp" />

    <LinearLayout
        android:id="@+id/starSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tvInstructions">

        <ImageView
            android:id="@+id/star1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_star_filled" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_star_filled" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_star_filled" />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_star_filled" />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_star_unfilled" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvWriteYourReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write Your Review"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_below="@id/starSection"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etReviewInput"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Add Review"
        android:background="@drawable/rounded_border"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:layout_below="@id/tvWriteYourReview" />

    <Button
        android:id="@+id/btnWriteReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write Review"
        android:backgroundTint="@color/light_blue_600"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />
</RelativeLayout>
